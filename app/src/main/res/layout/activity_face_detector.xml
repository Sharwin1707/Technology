<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_bg"
    tools:context="com.sharwin.technology.FaceDetectorActivity">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center"
        android:background="@drawable/header_gradient">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ” AI Face Detection"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:shadowColor="#80000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Advanced computer vision powered by OpenCV"
            android:textSize="14sp"
            android:textColor="#E0FFFFFF"
            android:layout_marginTop="8dp"
            android:gravity="center" />
    </LinearLayout>

    <!-- Image Preview Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="16dp"
        android:elevation="12dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Image Status Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="#F8F9FA"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“· Image Preview"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50" />

                <TextView
                    android:id="@+id/detectionStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#E8F5E8"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:text="Ready"
                    android:textColor="#27AE60"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Image View -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:background="#F8F9FA" />

                <!-- Placeholder when no image -->
                <LinearLayout
                    android:id="@+id/placeholderLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="#F8F9FA">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“¸"
                        android:textSize="60sp"
                        android:alpha="0.3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No image loaded"
                        android:textSize="16sp"
                        android:textColor="#95A5A6"
                        android:layout_marginTop="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tap 'Load Image' to get started"
                        android:textSize="12sp"
                        android:textColor="#BDC3C7"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Control Panel -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="8dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Section Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽ›ï¸ Detection Controls"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:layout_marginBottom="20dp" />

            <!-- Primary Actions -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLoadImage"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="ðŸ“‚ Load Image"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:backgroundTint="#3498DB"
                    app:cornerRadius="28dp"
                    android:elevation="4dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSaveImage"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="ðŸ’¾ Save Result"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:backgroundTint="#27AE60"
                    app:cornerRadius="28dp"
                    android:elevation="4dp" />
            </LinearLayout>

            <!-- Detection Options -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ” Detection Options"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#34495E"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDetectFaces"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:text="ðŸ‘¤ Faces"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:strokeColor="#E74C3C"
                    app:cornerRadius="24dp"
                    android:textColor="#E74C3C" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDetectEyes"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="6dp"
                    android:text="ðŸ‘ï¸ Eyes"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:strokeColor="#9B59B6"
                    app:cornerRadius="24dp"
                    android:textColor="#9B59B6" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGrayscale"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:text="âš« Gray"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:strokeColor="#34495E"
                    app:cornerRadius="24dp"
                    android:textColor="#34495E" />
            </LinearLayout>

            <!-- Utility Actions -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ› ï¸ Utilities"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#34495E"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnResetImage"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="ðŸ”„ Reset"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:strokeColor="#F39C12"
                    app:cornerRadius="24dp"
                    android:textColor="#F39C12" />


            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Performance Stats (Optional) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center">





        <!-- Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/nextButton"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="next page"
            android:textColor="#FFFFFF"
            app:backgroundTint="#143D60"
            app:cornerRadius="24dp"
            app:icon="@drawable/ic_arrow_forward"
            app:iconTint="#FFFFFF" />
    </LinearLayout>

</LinearLayout>
