<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/celebration_gradient_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="32dp"
    android:animateLayoutChanges="true">

    <!-- Celebration Icon -->
    <ImageView
        android:id="@+id/celebrationIcon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_celebration_trophy"
        android:layout_marginBottom="24dp"
        android:contentDescription="Celebration Trophy"
        android:scaleType="centerInside" />

    <!-- Main Thank You Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/thankYouCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        android:background="@drawable/card_shimmer_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:gravity="center">

            <!-- Animated Thank You Text -->
            <TextView
                android:id="@+id/thankYouMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🎉 THANK YOU! 🎉"
                android:textSize="32sp"
                android:textColor="#1A237E"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="@font/comic_sans"
                android:letterSpacing="0.05"
                android:layout_marginBottom="12dp" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/congratsSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You did amazing!"
                android:textSize="18sp"
                android:textColor="#5C6BC0"
                android:textStyle="normal"
                android:gravity="center"
                android:alpha="0.9" />

            <!-- Fun Stats or Score Display -->
            <LinearLayout
                android:id="@+id/statsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:background="@drawable/stats_rounded_bg">

                <TextView
                    android:id="@+id/scoreLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⭐ Final Score: "
                    android:textSize="16sp"
                    android:textColor="#37474F"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/scoreValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100%"
                    android:textSize="20sp"
                    android:textColor="#4CAF50"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Action Buttons with Enhanced Styling -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Play Again Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="6dp">

            <Button
                android:id="@+id/playAgainButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="🎮 PLAY AGAIN"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/play_again_gradient"
                android:textColor="#FFFFFF"
                android:letterSpacing="0.1"
                android:elevation="0dp"
                android:stateListAnimator="@null" />

        </androidx.cardview.widget.CardView>

        <!-- Share Achievement Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="6dp">

            <Button
                android:id="@+id/shareButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="🏆 SHARE ACHIEVEMENT"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/share_gradient"
                android:textColor="#FFFFFF"
                android:letterSpacing="0.1"
                android:elevation="0dp"
                android:stateListAnimator="@null" />

        </androidx.cardview.widget.CardView>

        <!-- Exit Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="25dp"
            app:cardElevation="6dp">

            <Button
                android:id="@+id/exitButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="🚪 EXIT"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/exit_gradient"
                android:textColor="#FFFFFF"
                android:letterSpacing="0.1"
                android:elevation="0dp"
                android:stateListAnimator="@null" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Floating Particles Effect Container -->
    <FrameLayout
        android:id="@+id/particlesContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:clickable="false"
        android:focusable="false" />


</LinearLayout>
